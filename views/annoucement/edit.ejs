<% include ./../layout/top %>

<div class="container">
  <h1>Editar Anúncio</h1>

  <% include ./../layout/messages %>

  <form method="POST" class="form-horizontal" role="form">
    <div class="form-group">
      <label for="txtTitle" class="col-sm-2 control-label">Título</label>
      <div class="col-sm-10">
        <input type="text" name="title" required class="form-control" id="txtTitle" value="<%=annoucement.title%>" placeholder="Título">
      </div>
    </div>
    <div class="form-group">
      <label for="description" class="col-sm-2 control-label">Descrição</label>
      <div class="col-sm-10">
        <textarea name="description" required class="form-control" id="description" cols="30" rows="10"><%=annoucement.description%></textarea>
      </div>
    </div>

    <div class="form-group">
      <label for="category" class="col-sm-2 control-label">Categoria</label>
      <div class="col-sm-10">
        <div class="dropdown">
          <select id="ddCategory" name="category" class="btn btn-default">
            <% categories.forEach(function(category) { %>
            <option value="<%= category.id %>" <% if(category.id == annoucement.category){%>selected<%}%> ><%= category.name %></option>
            <% }) %>
          </select>
       </div>
     </div>
   </div>

    <div class="form-group">
      <label for="locate" class="col-sm-2 control-label">Localização (cidade)</label>
      <div class="col-sm-10">
        <input type="text" name="locate" required class="form-control" id="txtlocate" value="<%=annoucement.locate%>" >
      </div>
    </div>

    <div class="form-group">
      <label for="price" class="col-sm-2 control-label">Preço</label>
      <div class="col-sm-10">
        <input type="text" name="price" required class="form-control" id="txtPrice" value="<%=annoucement.price%>">
      </div>
    </div>

   <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Gravar</button>
      <a href="/annoucement/view/<%=annoucement.annouce_id%>" class="btn" >Cancelar</a>
    </div>
  </div>
</form>

</div>

<% include ./../layout/bottom %>